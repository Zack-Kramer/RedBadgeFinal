@using MVC.Models._CreatureModels
@model CreatureCreate

@{
    ViewData["Title"] = "Create A Creature";
}

<h1> Create A Creature</h1>
<hr />

<form method="post">
    <div class="row">
        <div class='col-md-4'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Effect" class="control-label"></label>
                    <input asp-for="Effect" class="form-control" />
                    <span asp-validation-for="Effect" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <!--What ^ is doing is pivoting back up to 'post' so it will know to go to the controller-->
                </div>
            </form>
            <div>
                <a asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
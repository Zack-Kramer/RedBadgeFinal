@using MVC.Models._CreatureModels

@model CreatureDetail

@{
    string title = "Edit" + Model.Color;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class='col-md-4'>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Effect" class="control-label"></label>
                <input asp-for="Effect" class="form-control" />
                <span asp-validation-for="Effect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back To List</a>
        </div>
    </div>
</div>


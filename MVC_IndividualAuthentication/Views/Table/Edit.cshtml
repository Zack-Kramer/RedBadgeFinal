@using MVC.Models._TableModels

@model TableDetail

@{
    string title = "Edit" + Model.Id;
    ViewData["Title"] = title;
}

<h1>@title</h1>
<hr />

<div class="row">
    <div class='col-md-4'>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Creature" class="control-label"></label>
                <input asp-for="Creature" class="form-control" />
                <span asp-validation-for="Creature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatureId" class="control-label"></label>
                <input asp-for="CreatureId" class="form-control" />
                <span asp-validation-for="CreatureId" class="text-danger"></span>
            </div>
         

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back To List</a>
        </div>
    </div>
</div>



@using MVC.Models._TableModels
@using MVC.Data.Data
@model TableCreate

@{
    ViewData["Title"] = "Create A Table";
}

<h1> Create A Table</h1>
<hr />

<form method="post">
    <div class="row">
        <div class='col-md-4'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Create">
                <div class="form-group">
                    @*<label asp-for="CreatureId" class="control-label"></label>*@
                    <select asp-for="CreatureId" asp-items="@Model.CreatureSelectionList" class="form-select">

                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <!--What ^ is doing is pivoting back up to 'post' so it will know to go to the controller-->
                </div>
            </form>
            <div>
                <a asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@using MVC.Models._CardModels

@model IEnumerable<CardIndex>

@{
    ViewData["Title"] = "Card Index";
}

<h1>Card Index</h1>
<p>
    <a asp-action="Create">Create Card</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Card", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", "Card", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Card", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

